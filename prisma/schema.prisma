generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingredients {
  id         Int      @id @default(autoincrement())
  ingredient String   @unique
  pizza      Pizzas[]
}

model Pizzas {
  id           Int         @id @default(autoincrement())
  name         String
  price        Float
  ingredientId Int
  ingredient   Ingredients @relation(fields: [ingredientId], references: [id])
  Orders       Orders[]
}

model Orders {
  id        Int      @id @default(autoincrement())
  qtd       Int
  pizzasId  Int
  order     Pizzas   @relation(fields: [pizzasId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
